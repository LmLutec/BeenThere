<section id="user_reviews">
<% @user.reviews.each do |review| %>
    <% location = review.location %> 
My trip to <%= "#{by_location(review.location)} on #{review.created_at.strftime("%b %d, %Y")}" %> </br>
        <%= link_to 'Edit location', edit_location_path(location) %></br>
        <%= link_to "Edit my review", edit_review_path(review) %></br>
       
        <%= button_to "Delete my review", review, :method => "delete" %>
        
</br>
<% end %>
</section>

<section id="incoming">
<p>Comments on my reviews</p>

<% incoming_comments.each do |comment| %>
    <details open>
    <summary><%= by_location(comment.review.location)%></summary>
    <b><%="#{@user}"%></b> <%= "said #{comment.content}"%></br>
    <h5><%= comment.created_at.strftime("at %I:%M %P on %b %d, %Y") %></h5>
    </details>
    <%end%>


</section>

